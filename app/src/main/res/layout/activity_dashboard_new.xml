<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

   <!-- <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/sw_layout"
        android:layout_above="@+id/footer"
        android:orientation="vertical">-->


        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="55dp"
            android:orientation="vertical">

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:text="Select Date"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="3dp"
                        android:textColor="#000"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/spinner_boader"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/edt_fromdate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:clickable="true"
                            android:focusable="false"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:focusableInTouchMode="false"
                            android:hint="DD-MM-YYYY"
                            android:text="DD-MM-YYYY"
                            android:inputType="none"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="15sp" />


                        <EditText
                            android:id="@+id/fromdateseterror_TV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:editable="false"
                            android:text="" />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:text="Last updated Date"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/blue_500"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                        <TextView
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:id="@+id/date_time_TV"
                            android:text="25/05/2021 | 11:30"
                            android:textColor="@color/blue_500"/>
                    </LinearLayout>
                    <!--
                                android:background="#f1f3f4"
                    -->

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/rel_yearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:gravity="left"
                    android:layout_weight="1.5"
                    android:layout_below="@+id/mainlinearlayout_ll"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/spinner_layout"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent">

                        <Spinner
                            android:id="@+id/hospital_list_SP"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:dropDownVerticalOffset="35dp"
                            android:spinnerMode="dropdown" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="-4dp"
                        android:background="#FFFFFF"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="Hospital"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="10sp" />
                </RelativeLayout>

                <Button
                    android:id="@+id/Add_bt"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="+Add"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    style="@style/MyButton" />
            </LinearLayout>
            <!--<ScrollView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                >-->
            <ListView
                android:id="@+id/lv_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <!--
            </ScrollView>
            -->
        </LinearLayout>

<!--
    </ScrollView>
-->

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="8dp"
            card_view:contentPadding="5dp"
            tools:ignore="MissingConstraints"
            style="@style/MyButton"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:background="#B3D9EA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    style="@style/MyButton"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        tools:ignore="MissingConstraints"
                        android:background="#A0DAF4">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:src="@drawable/dashboard"
                            card_view:tint="@android:color/white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Dashboard"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/helplinecenter_LL"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        tools:ignore="MissingConstraints"
                        android:background="@color/colorPrimary"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:src="@drawable/call"
                            card_view:tint="@android:color/white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Helpline"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/googlemaps_LL"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        tools:ignore="MissingConstraints"
                        android:background="@color/colorPrimary"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:src="@drawable/maps"
                            card_view:tint="@android:color/white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Locations"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
            <!--            <Button-->
            <!--                android:id="@+id/btn_converter"-->
            <!--                android:layout_height="35dp"-->
            <!--                android:padding="5dp"-->
            <!--                android:text="Helpline center"-->
            <!--                android:layout_width="wrap_content"/>-->

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>










