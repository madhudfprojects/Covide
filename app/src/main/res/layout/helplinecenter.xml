<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F0F9FA"
    tools:context=".Activity_HelpLineCenter">

    <ScrollView
        android:id="@+id/sw_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/footer"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/spinner_layout"
                android:padding="10dp"
                android:layout_margin="10dp"
                card_view:cardCornerRadius="10dp"
                card_view:contentPadding="0dp">


                <LinearLayout
                    android:id="@+id/help_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <LinearLayout
                        android:id="@+id/contct_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/phone_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="To get Hospital Bed Assitance and Doctor Guidance,call Helpline No: "
                            android:textColor="@color/dark_black_red"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:id="@+id/cont_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:visibility="visible">


                            <ImageView
                                android:id="@+id/contactNumber_IV"
                                android:layout_width="80dp"
                                android:layout_height="60dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:src="@android:drawable/ic_menu_call"
                                card_view:tint="@android:color/holo_green_dark" />

                            <TextView
                                android:id="@+id/contacmber_TV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginLeft="5dp"
                                android:text="Click Here To call"
                                android:textColor="#4656AE"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/contactNumber_TV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="080-47168111"
                            android:textColor="@color/color_red"
                            android:textSize="25sp" />


                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/spinner_layout"
                android:padding="10dp"
                card_view:cardCornerRadius="10dp"
                card_view:contentPadding="0dp"
                android:layout_margin="10dp">


                <LinearLayout
                    android:id="@+id/help_1_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text=" For more Information on Vaccination Center, Test Center, Fever Clinic, Hospital List,"
                            android:textColor="@color/dark_black_red"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Please visit the website :"
                            android:textColor="@color/dark_black_red"
                            android:textSize="18sp"
                            android:layout_marginTop="10dp"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            android:layout_marginTop="10dp">


                            <!--                    <ImageView-->
                            <!--                        android:id="@+id/contactNumber_IV"-->
                            <!--                        android:layout_width="wrap_content"-->
                            <!--                        android:layout_height="wrap_content"-->
                            <!--                        android:gravity="center"-->
                            <!--                        android:src="@android:drawable/ic_menu_call"-->
                            <!--                        card_view:tint="@android:color/holo_green_dark" />-->

                            <TextView
                                android:id="@+id/weblink_TV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="https://hdmitra.org/"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:padding="10dp"
                                android:background="@color/colorPrimary"/>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            style="@style/MyButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="8dp"
            card_view:contentPadding="5dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/MyButton"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/dashboard_LL"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:orientation="vertical"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:src="@drawable/dashboard"
                            card_view:tint="@android:color/white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Dashboard"
                            android:textColor="#FFFFFF" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/helplinecenter_LL"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#B3D9EA"
                        android:orientation="vertical"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:src="@drawable/call"
                            card_view:tint="@color/colorPrimary" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Helpline"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/maps_LL"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:orientation="vertical"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:src="@drawable/maps"
                            card_view:tint="@android:color/white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Google maps"
                            android:textColor="#FFFFFF" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
            <!--            <Button-->
            <!--                android:id="@+id/btn_converter"-->
            <!--                android:layout_height="35dp"-->
            <!--                android:padding="5dp"-->
            <!--                android:text="Helpline center"-->
            <!--                android:layout_width="wrap_content"/>-->

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>