<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#e0f7fa"
    android:id="@+id/main"
    tools:context=".ContactUs_Activity">

<!--    <include-->
<!--        android:id="@+id/toolbar_farmponddetails"-->
<!--        layout="@layout/titlebar_custom" />-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fafafa">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            card_view:cardCornerRadius="10dp"
            card_view:contentPadding="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/spinner_border"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:id="@+id/downloadlayout_LL">

                <ImageView
                    android:id="@+id/pdficon_IV"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/pdficon" />

                <TextView
                    android:id="@+id/usermanual_TV"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:padding="8dp"
                    android:text="User Manual"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/usermanual_download_iv"
                    android:tag="image_tag"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@android:drawable/stat_sys_download"
                    card_view:tint="@color/blue_100" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/help_ll"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:background="@drawable/button_selector">


                <LinearLayout
                    android:id="@+id/help_new_ll"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/help_new_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:src="@drawable/help"
                        android:visibility="gone"
                        card_view:tint="@android:color/holo_purple" />
                    <TextView
                        android:id="@+id/help_new_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Help"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/dark_black_red"
                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/contct_ll"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/phne_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Helpline Number :"
                        android:textColor="@color/dark_black_red"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/ctc_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:src="@android:drawable/ic_menu_call"
                        card_view:tint="@android:color/holo_green_dark" />
                    <TextView
                        android:id="@+id/phone_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="98989898989"
                        android:textColor="@color/dark_black_red"
                        android:textSize="15sp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/Email_ll"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/email_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:src="@drawable/email"
                        card_view:tint="@android:color/holo_red_dark" />
                    <TextView
                        android:id="@+id/email_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="9dp"
                        android:text="jhjh@jj.com"
                        android:textColor="@color/dark_black_red"
                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/version_ll"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_gravity="center"

                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/version_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:src="@drawable/mobile"
                        card_view:tint="@android:color/holo_blue_dark" />
                    <TextView
                        android:id="@+id/version_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Version 1.0"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/dark_black_red"
                        android:textSize="15sp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/usrmanual_ll"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/usrmanual_iv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/pdficon" />
                    <TextView
                        android:id="@+id/usrmanual_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="User Manual"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/dark_black_red"
                        android:textSize="15sp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/kan_ll"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/kan_iv"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@drawable/video"
                        card_view:tint="@android:color/holo_orange_light"/>
                    <TextView
                        android:id="@+id/kan_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="For Demo in Kannada,Click Here"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/dark_black_red"
                        android:textSize="15sp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/eng_ll"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/eng_iv"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@drawable/video"
                        card_view:tint="@android:color/holo_red_light"/>
                    <TextView
                        android:id="@+id/eng_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="For Demo in Engish,Click Here"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/dark_black_red"
                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/telgu_ll"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/telgu_iv"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@drawable/video"
                        card_view:tint="@android:color/holo_green_dark"/>
                    <TextView
                        android:id="@+id/telgu_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="For Demo in Telagu,Click Here"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/dark_black_red"
                        android:textSize="15sp" />


                </LinearLayout>

            </LinearLayout>

